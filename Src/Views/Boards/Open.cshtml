@using SamMiller.Mumba.Models.BoardViewModels
@using System.Collections.Generic
@model BoardView


@{
ViewData["Title"] = $"{Model.Board.Title}" ;
}
<div>
    <a asp-action=Edit asp-route-id="@Model.Board.Id" class="waves-effect waves-light btn"> Edit <i class="material-icons">edit</i></a>
</div>
<div class="fixed-action-btn">
    <a asp-action=Add asp-controller="Tasks" asp-route-id="@Model.Board.Id" class="btn-floating btn-large waves-effect waves-light red"><i
            class="large material-icons">add</i></a>
</div>

<div class="row">
    <ul class="collection with-header col s4">
        <li class="collection-header center">
            <h4>To Do</h4>
        </li>
        @foreach (var task in Model.TaskL1)
        {
        <li class="collection-item avatar">
            <div class="card blue-grey darken-1">
                <div class="card-content white-text">
                    <span class="card-title center">@task.Title</span>
                    <p>@task.Description</p>
                </div>
            </div>
                    <a asp-controller="Tasks" asp-action="Open" asp-route-id="@task.Id" class="secondary-content"><i
                            class="material-icons">send</i></a>
        </li>
        }
    </ul>

    <ul class="collection with-header col s4">
        <li class="collection-header center">
            <h4>In Progress</h4>
        </li>
        @foreach (var task in Model.TaskL2)
        {
        <li class="collection-item">
            <span class="title">@task.Title</span>
            <p>@task.Description</p>
            <a asp-controller="Tasks" asp-action="Open" asp-route-id="@task.Id" class="secondary-content"><i class="material-icons">send</i></a>
        </li>
        }
    </ul>

    <ul class="collection with-header col s4">
        <li class="collection-header center">
            <h4>Done</h4>
        </li>
        @foreach (var task in Model.TaskL3)
        {
        <li class="collection-item">
            <span class="title center">@task.Title</span>
            <p>@task.Description</p>
            <a asp-controller="Tasks" asp-action="Open" asp-route-id="@task.Id" class="secondary-content"><i class="material-icons">send</i></a>
        </li>
        }
    </ul>
</div>