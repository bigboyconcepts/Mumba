@{
    ViewData["Title"] = "Your Boards";
}
@using SamMiller.Mumba.Models
@using System.Collections.Generic
@model IEnumerable<Board>

@if ((bool)ViewData["includeClosed"]) {
    <a asp-action="All">Exclude Closed Tickets</a>
} else {
    <a asp-action="All" asp-route-includeClosed="true">Include Closed Tickets</a>
}
  @foreach (var board in Model) {

 <div class="row">
    <div class="col s12 m6">
      <div class="card stickey-action grey darken-1 hoverable activation">
            <div class="card-content white-text">
             <span class="card-title">@board.Title</span>
            </div>

        <div class="card-reveal">
        <span class="card-title grey-text text-darken-4">@board.Title<i class="material-icons right">close</i></span>
        </div>
        <div class="card-action">
          <a asp-action="Open" asp-route-id="@board.Id">Open</a>
        </div>
    </div>
    </div>
    </div>

    }
